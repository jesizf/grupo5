<!DOCTYPE html>
<html lang="es">

<%-include('./partials/head', {title: 'Agregar Producto'})%>
    <body id="body-add">
        <%-include('./partials/header')%>
        <!--cuerpo-->
        <main class="container" style="margin-bottom: 50px;" >
         <div class="row">
             <div class="ccol-12 col-md-10 col-lg-8 mt-5 mx-auto">
                <div class="card">
                    <div style="background-color: #fb9d5a" class="card-header text-light">
                        <h5>Agregar Producto</h5>
                    </div>
                    <div class="car-body">
                            <form class="row m-1" method="POST" autocomplete="off" enctype="multipart/form-data" id="form-product">
                                <div class="col-12">
                                    <div class="form-floating pt-2">
                                        <input type="text" class="form-control" id="name-product" placeholder=" Nombre del Producto" name="name" value="<%= locals.old && old.name ? old.name : null %>">
                                        <label for="name">Nombre del Producto</label>
                                       </div>

                                       <span id="error-name" style="color: red; font-size: 12px; margin-bottom: 20px;" ><%= locals.errors && errors.name ? errors.name.msg : null%></span>
                                       <span id="error-product-name"  class="error" ></span>
                                </div>
                                
                                <div class="col-12 col-md-6 mt-3">
                                    <div class="form-floating pt-2">
                                     <input type="number" class="form-control" id="price" value="<%= locals.old && old.price ? old.price : null %>" placeholder=" Precio" name="price">
                                     <label for="price">Precio</label>
                                    </div>
                                    <span id="error-price" style="color: red; font-size: 12px; margin-bottom: 20px;"><%= locals.errors && errors.price ? errors.price.msg : null%></span>
                                    <span id="error-product-price"  class="error" ></span>
                                </div>


                                <div class="col-12 col-md-6 mt-3">
                                    <div class="form-floating pt-2">
                                        <select id="option-category" class="form-select" aria-label="Floating label select example" name="category">
                                         <option value="" selected hidden>Selecciona la categoría</option>
                                          <% categories.forEach(category => { %>
                                            <option value="<%= category.id %>" <%= locals.old && old.category.id === category.id  ? 'selected' : null%> ><%= firstLetter(category.name)%></option>
                                          <% }) %>                                          
                                        </select>
                                        <label for="floatingSelect">Categorías</label>
                                      </div>
                                      <span id="error-category" style="color: red; font-size: 12px; margin-bottom: 20px;" ><%= locals.errors && errors.category ? errors.category.msg : null%></span>
                                     
                                     </div>

                                     <div class="col-12 col-md-6 mt-3">
                                        <div class="form-floating pt-2">
                                            <select id="option-weigh" class="form-select" aria-label="Floating label select example" name="weigh">
                                             <option value="" selected hidden>Selecciona el peso</option>
                                              <% weighs.forEach(weigh => { %>
                                                <option value="<%= weigh.id %>" <%= locals.old && old.weigh.id === weigh.id ? 'selected' : null%> ><%= weigh.weigh%></option>
                                              <% }) %>                                          
                                            </select>
                                            <label for="floatingSelect">Peso de los prodúctos</label>
                                          </div>
                                          <span id="error-weigh" style="color: red; font-size: 12px; margin-bottom: 20px;" ><%= locals.errors && errors.weigh ? errors.weigh.msg : null%></span>
                                    
                                         </div>


                                     <div class="col-12 col-md-6">

                                         <div class="mb-3 mt-3">
                                            <label for="image" class="btn btn-outline-secondary w-100 mt-2" id="btnImagen" >Subir imagen</label>
                                            <input  hidden class="form-control" type="file" id="image" name="image" multiple>
                                          </div>
                                          <span id="imageError" class="text-danger small ms-2"><%= locals.errors && errors.image ? errors.image.msg : null%> </span>
                                       </div>
                                    </div>
                                    <div class="box-img-mini-add" id="preview">
                                     
                                    </div>       
                                                        
                                <div class="col-12 p-3 mt-3">
                                    <div class="form-floating">
                                        <textarea  style="resize: none; height: 90px;" class="form-control" placeholder="Descripción del producto" id="description" name="description"><%= locals.old && old.description ? old.description : null %></textarea></textarea>
                                        <label for="description">Descripción del producto</label>
                                      </div>
                                      <span id="error-description" style="color: red; font-size: 12px; margin-bottom: 20px;"><%= locals.errors && errors.description ? errors.description.msg : null%></span>
                                      <span id="error-product-description"  class="error" ></span>
                                </div>
                                <div class="col-12 p-3 mt-3">
                                   
                                    <span id="validation-campos" style="color: red; font-size: 12px; margin-bottom: 20px;" ></span>
                                </div>
                             
                             
                                
                            <div class="d-flex justify-content-center col-12 mt-5"  >
                                <button type="submit" style="height: 60px; width: 180px; border-radius: 30px; background-color: #fb9d5a; border: none; margin-bottom: 20px; " class="btn btn-primary">Agregar</button>
                            </div>
                               
                            
                         </form>
                    </div>
                </div>

             </div>
             
         </div>
        </main>
        <%-include('./partials/footer')%>
        <%-include('./partials/scripts')%>
   
        <script src="/javascripts/productValidator.js"></script>
      
    </body>

</html>