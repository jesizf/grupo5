<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head',{title : 'Editar producto'}) %>

    <body class="productEdit" id="body-edit">
        <%-include('./partials/header')%>
            <!--Cuerpo-->
            <main class="container" style="margin-bottom: 50px;">
                <div class="row">
                    <div class="ccol-12 col-md-10 col-lg-8 mt-5 mx-auto">
                        <div class="card">
                            <div style="background-color: #fb9d5a" class="card-header text-light">
                                <h5>Editar Producto</h5>
                            </div>
                            <div class="car-body">

                                <!--Formulario-->
                                <form action="/products/update/<%= product.id %>?_method=PUT" class="row m-1" method="POST" id="form-product-edit">

                                    <!--Nombrar producto-->
                                    <div class="col-12">
                                        <div class="form-floating pt-2">
                                            <input type="text" class="form-control" id="name-product" placeholder=" Nombre del Producto" name="name" value="<%= product.name %>">
                                            <label for="name">Nombre del Producto</label>
                                        </div>
                                        <span id="error-name" style="color: red; font-size: 12px; margin-bottom: 20px;" ><%= locals.errors && errors.name ? errors.name.msg : null%></span>
                                        <span id="error-product-name"  class="error" ></span>
                                       
                                    </div>

                                    <!--$ Precio -->
                                    <div class="col-12 col-md-6 mt-3">
                                        <div class="form-floating pt-2">
                                            <input type="number" class="form-control" id="price" value="<%= product.price %>" placeholder=" Precio" name="price">
                                            <label for="price">Precio</label>
                                        </div>
                                        <span  id="error-price"  style="color: red; font-size: 12px; margin-bottom: 20px;"><%= locals.errors && errors.price ? errors.price.msg : null%></span>
                                        <span id="error-product-price"  class="error" ></span>
                                  
                                    </div>

                                    <!-- seleccionar categoria -->
                                    <div class="col-12 col-md-6 mt-3">
                                        <div class="form-floating pt-2">
                                            <select id="option-category" class="form-select" name="category" aria-label="Floating label select example" >
                                                <option value="" selected hidden>Seleccioná la categoría</option>
                                                <% categories.forEach(category => { %>
                                                <option value="<%= category.id %>" <%= product.categoryId === category.id ? 'selected' : null%>><%= firstLetter(category.name)%></option>
                                            <% }) %>                        
                                            </select>
                                            <label for="category">Categorías</label>
                                        </div>
                                            <span style="color: red; font-size: 12px; margin-bottom: 20px;" ><%= locals.errors && errors.category ? errors.category.msg : null%></span>
                                        </div>

                                    <!--Seleccionar el peso-->
                                    <div class="col-12 col-md-6 mt-3">
                                        <div class="form-floating pt-2">
                                            <select id="option-weigh" class="form-select" name="weigh" id="pesoProducts" >
                                                <option value="" selected hidden>Seleccioná el Peso</option>
                                                <% weighs.forEach(weigh => { %>
                                                <option value="<%= weigh.id %>" <%= product.weighId === weigh.id ? 'selected' : null%> ><%= weigh.weigh %></option>
                                         <% }) %>                                    
                                            </select>
                                        <label for="pesoProducts">Peso</label>
                                        </div>
                                            <span style="color: red; font-size: 12px; margin-bottom: 20px;"><%= locals.errors && errors.pesoProducts ? errors.pesoProducts.msg : null%></span>
                                        </div>

                                    <!--Subir una imagen-->
                                    <div class="col-12 col-md-6">

                                        <div class="mb-3 mt-3">
                                            <label for="image" class="btn btn-outline-secondary w-100 mt-2" id="btnImagen">Subí una imagen</label>
                                            <input hidden class="form-control" type="file" accept="image/*"  name="image" id="image" multiple  onchange="addImage('<%=product.id%>',this.files)">
                                        </div>
                                        <span id="imageError" class="text-danger small ms-2"><%= locals.errors && errors.image ? errors.image.msg : null%> </span>
                                    </div>
                                    <div >
                                        <div  id="preview" class="preview1">
                                          <% product.images.forEach((image,index) => { %>
                                            <div class="box-img-mini" >
                                                <div>
                                                    <img class="img-edit-mini" width="150" src="/img/products/<%= image.file %>" alt="imagen">
                                                </div>
                                             
                                                <div >
                                                  <a onclick="deleteImage('<%=image.id%>')" class="btn btn-danger ">Eliminar</a>
                                                </div>
                                            </div>
                                          <% }) %>
                                        </div>
                                    </div>
                                       </div>
                                  

                            <!-- Descripción del producto -->
                            <div class="col-12 p-3 mt-3">
                                <div class="form-floating">
                                    <textarea style="resize: none; height: 90px;" class="form-control" placeholder="Descripción del producto" name="description"  id="description"><%= product.description %></textarea>
                                    <label for="description">Descripción del producto</label>
                                </div>
                                    <span id="error-description" style="color: red; font-size: 12px; margin-bottom: 20px;"><%= locals.errors && errors.description ? errors.description.msg : null%></span>
                                    <span id="error-product-description"  class="error" ></span>
                            </div>
                            <div class="col-12 p-3 mt-3">
                                   
                                <span id="validation-campos" style="color: red; font-size: 12px; margin-bottom: 20px;" ></span>
                            </div>

                            <!-- Botón Guardar-->
                            <div class="d-flex justify-content-center col-12 mt-5">
                                <button type="submit"
                                    style="height: 60px; width: 180px; border-radius: 30px; background-color: #fb9d5a; border: none; margin-bottom: 20px; "
                                    class="btn btn-primary">Guardar</button>
                            </div>

                            </form>

                        </div>
                    </div>

                </div>

                </div>
            </main>
            <%-include('./partials/footer')%>
                <%-include('./partials/scripts')%>}
               
                <script src="/javascripts/productEditValidator.js"></script>
              

    </body>

</html>