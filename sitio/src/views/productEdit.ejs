<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head',{title : 'Editar producto'}) %>

    <body id="body-edit">
        <%-include('./partials/header')%>
            <!--Cuerpo-->
            <main class="container" style="margin-bottom: 50px;">
                <div class="row">
                    <div class="ccol-12 col-md-10 col-lg-8 mt-5 mx-auto">
                        <div class="card">
                            <div style="background-color: #fb9d5a" class="card-header text-light">
                                <h5>Editar Producto</h5>
                            </div>
                            <div class="car-body">

                                <!--Formulario-->
                                <form action="/products/update/<%= product.id %>?_method=PUT" class="row" method="POST" >

                                    <!--Nombrar producto-->
                                    <div class="col-12">
                                        <div class="form-floating pt-2">
                                            <input type="text" class="form-control" id="nombre" placeholder=" Nombre del Producto" name="name" value="<%= product.name %>">
                                            <label for="name">Nombre del Producto</label>
                                        </div>
                                        <span style="color: red; font-size: 12px; margin-bottom: 20px;" ><%= locals.errors && errors.name ? errors.name.msg : null%></span>
                                    </div>

                                    <!--$ Precio -->
                                    <div class="col-12 col-md-6 mt-3">
                                        <div class="form-floating pt-2">
                                            <input type="number" class="form-control" id="price" value="<%= product.price %>" placeholder=" Precio" name="price">
                                            <label for="price">Precio</label>
                                        </div>
                                        <span style="color: red; font-size: 12px; margin-bottom: 20px;"><%= locals.errors && errors.price ? errors.price.msg : null%></span>
                                    </div>

                                    <!-- seleccionar categoria -->
                                    <div class="col-12 col-md-6 mt-3">
                                        <div class="form-floating pt-2">
                                            <select class="form-select" name="category" id="floatingSelect" aria-label="Floating label select example" >
                                                <option value="" selected hidden>Seleccioná la categoría</option>
                                                <% categories.forEach(category => { %>
                                                <option value="<%= category %>" <%= product.category === category ? 'selected' : null%>><%= firstLetter(category)%></option>
                                            <% }) %>                        
                                            </select>
                                            <label for="category">Categorías</label>
                                        </div>
                                            <span style="color: red; font-size: 12px; margin-bottom: 20px;" ><%= locals.errors && errors.category ? errors.category.msg : null%></span>
                                        </div>

                                    <!--Seleccionar el peso-->
                                    <div class="col-12 col-md-6 mt-3">
                                        <div class="form-floating pt-2">
                                            <select class="form-select" name="pesoProducts" id="pesoProducts" >
                                                <option value="" selected hidden>Seleccioná el Peso</option>
                                                <% pesoProducts.forEach(pesoProducts => { %>
                                                <option value="<%= pesoProducts %>" <%= product.pesoProducts === pesoProducts ? 'selected' : null%> ><%= pesoProducts %></option>
                                         <% }) %>                                    
                                            </select>
                                        <label for="pesoProducts">Peso</label>
                                        </div>
                                            <span style="color: red; font-size: 12px; margin-bottom: 20px;"><%= locals.errors && errors.pesoProducts ? errors.pesoProducts.msg : null%></span>
                                        </div>

                                    <!--Subir una imagen-->
                                    <div class="col-12 col-md-6">

                                        <div class="mb-3 mt-3">
                                            <label for="image" class="btn btn-outline-secondary w-100 mt-2">Subí una imagen</label>
                                            <input hidden class="form-control" type="file" name="image" id="image" multiple>
                                        </div>
                                    </div>
                                    </div>

                            <!-- Descripción del producto -->
                            <div class="col-12 p-3 mt-3">
                                <div class="form-floating">
                                    <textarea style="resize: none; height: 90px;" class="form-control" placeholder="Descripción del producto" id="description" name="description"><%= product.description %></textarea>
                                    <label for="description">Descripción del producto</label>
                                </div>
                                    <span style="color: red; font-size: 12px; margin-bottom: 20px;"><%= locals.errors && errors.description ? errors.description.msg : null%></span>
                            </div>

                            <!-- Botón Guardar-->
                            <div class="d-flex justify-content-center col-12 mt-5">
                                <button type="submit"
                                    style="height: 60px; width: 180px; border-radius: 30px; background-color: #fb9d5a; border: none; margin-bottom: 20px; "
                                    class="btn btn-primary">Guardar</button>"
                            </div>

                            </form>

                        </div>
                    </div>

                </div>

                </div>
            </main>
            <%-include('./partials/footer')%>
                <%-include('./partials/scripts')%>

    </body>

</html>