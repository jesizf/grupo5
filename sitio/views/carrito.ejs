            <!--producto 1-->
            <article class="carrito-producto">
                
                <div class="foto-carrito">
                    <img src="/img/snack1.jpg" alt="foto">
                    <div class="botones"><button class="sacar"> - </button><input><button class="agregar"> + </button>
                    </div>
                </div>
            <!--descripcion del producto-->
                <div class="carrito-descripcion">
                    <h4>Producto</h4>
                    <p>Lorem ipsum dolor sit amet</p>
                    <p class="precio-prod"><b>$ 50</b></p>
