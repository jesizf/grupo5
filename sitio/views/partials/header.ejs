<header>
    <div class="header-principal">
        <div class="burger-menu">
            <a href=""><i class="fas fa-bars"></i></a>
        </div>
        <div class="img">
            <a href="/"><img class="logo" src="/img/logo.png" alt=""></a>
        </div>
        <div class="buscador">
            <form action="">
                <input type="text" placeholder="¿Que estas buscando?">
                <a class="lupa" href="" class="input-group-btn"><i class="fa fa-search fa-lg"></i></a>
            </form>
        </div>
        <div class="iconos">
            <% if (locals.userLogin) { %> 
                <li>
                    <a href="/users/profile" class="user"><p><%= locals.userLogin.name %></p></a>
                    <a href="/carrito" class="carrito-header"><i class="iconify"
                        data-icon="emojione-monotone:shopping-cart"></i></a>
                </li>
                <% if (locals.userLogin.rol === 'admin') { %>
                    <li><a class="dropdown-item" href="/admin">Administración</a></li>
                    <% } %>
                <% }else{ %>
            <nav>
                <ul>
                    <a href="/users/login" class="user"><i class="far fa-user-circle"></i></a>
                    <a href="/carrito" class="carrito-header"><i class="iconify"
                            data-icon="emojione-monotone:shopping-cart"></i></a>
                </ul>
            </nav>
            <% } %>
        </div>
    </div>
    <div class="categorias">
        <nav>
            <ul>
                <li><a href="/admin"><i class="fas fa-user-cog"></i></a></li>
                <li><a href="/">Inicio</a></li>
                <li>
                    <a href="" class="icono-perro"><i class="fas fa-dog"></i></a>
                    <a href="#perros">Perros</a>
                    <a href="" class="boton"><i class="fas fa-caret-down"></i></i></a>
                </li>
                <li>
                    <a href="" class="icono-gato"><i class="fas fa-cat"></i></a>
                    <a href="#gatos">Gatos</a>
                    <a href="" class="boton"><i class="fas fa-caret-down"></i></a>
    </div>
</header>