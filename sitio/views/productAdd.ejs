<!DOCTYPE html>
<html lang="es">

<%-include('./partials/head', {title: 'Agregar Producto'})%>
    <body id="body-add">
        <%-include('./partials/header')%>
        <!--cuerpo-->
        <main class="container" style="margin-bottom: 50px;" >
         <div class="row">
             <div class="ccol-12 col-md-10 col-lg-8 mt-5 mx-auto">
                <div class="card">
                    <div style="background-color: #fb9d5a" class="card-header text-light">
                        <h5>Agregar Producto</h5>
                    </div>
                    <div class="car-body">
                            <form class="row m-1" method="POST" enctype="multipart/form-data" >
                                <div class="col-12">
                                    <div class="form-floating mb-3 pt-2">
                                        <input type="text" class="form-control" id="nombre" placeholder=" Nombre del Producto" name="name">
                                        <label for="name">Nombre del Producto</label>
                                       </div>
                                       <span class="validator-msg"><%= locals.errors && errors.name ? errors.name.msg : null%></span>
                                </div>
                                
                                <div class="col-12 col-md-6">
                                 <div class="form-floating mb-3">
                                     <input type="number" class="form-control" id="price" placeholder=" Precio" name="price">
                                     <label for="price">Precio</label>
                                    </div>
                                    <span class="validator-msg"><%= locals.errors && errors.price ? errors.price.msg : null%></span>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-floating  mb-3">
                                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="category">
                                          <option selected hidden>Seleccionar Categoría</option>
                                          <% categories.forEach(category => { %>
                                            <option value="<%= category %>"><%= firstLetter(category) %></option>
                                          <% }) %>                                          
                                        </select>
                                        <label for="floatingSelect">Categorías</label>
                                      </div>
                                      <span class="validator-msg"><%= locals.errors && errors.category ? errors.category.msg : null%> </span>
                                     </div>


                                     <div class="col-12 col-md-6">
                                        <div class="form-floating  mb-3">
                                            <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="pesoProducts">
                                              <option selected hidden>Seleccionar Peso</option>
                                              <% pesoProducts.forEach(pesoProducts => { %>
                                                <option value="<%= pesoProducts %>"><%= pesoProducts %></option>
                                              <% }) %>                                          
                                            </select>
                                            <label for="floatingSelect">Peso</label>
                                          </div>
                                          <span class="validator-msg"><%= locals.errors && errors.pesoProducts ? errors.pesoProducts.msg : null%> </span>
                                         </div>
                                     <div class="col-12 col-md-6">

                                         <div class="mb-3">
                                            <label for="image" class="btn btn-outline-secondary w-100 mt-2">Subir imagen</label>
                                            <input hidden class="form-control" type="file" id="image" name="image" multiple>
                                          </div>
                                       </div>
                                    </div>
                            
                                <div class="col-12 p-3">
                                    <div class="form-floating">
                                        <textarea style="resize: none; height: 90px;" class="form-control" placeholder="Descripción del producto" id="description"></textarea>
                                        <label for="description">Descripción del producto</label>
                                      </div>
                                      <span class="validator-msg"><%= locals.errors && errors.description ? errors.description.msg : null%></span>
                                </div>
                             
                                
                            <div class="d-flex justify-content-center col-12 mt-5"  >
                                <button type="submit" style="height: 60px; width: 180px; border-radius: 30px; background-color: #fb9d5a; border: none; margin-bottom: 20px; " class="btn btn-primary">Agregar</button>
                            </div>
                               
                            
                         </form>
                    </div>
                </div>

             </div>
             
         </div>
        </main>
        <%-include('./partials/footer')%>
        <%-include('./partials/scripts')%>
      
    </body>

</html>