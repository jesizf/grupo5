<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head',{title : 'Editar producto'}) %>

    <body id="body-add">
        <%-include('./partials/header')%>
            <!--cuerpo-->
            <main class="container" style="margin-bottom: 50px;">
                <div class="row">
                    <div class="ccol-12 col-md-10 col-lg-8 mt-5 mx-auto">
                        <div class="card">
                            <div style="background-color: #fb9d5a" class="card-header text-light">
                                <h5>Editar Producto</h5>
                            </div>
                            <div class="car-body">
                                <form class="row m-1" action="/products/edit/<%= product.id %>?_method=PUT" method="POST">>
                                    <div class="col-12">
                                        <div class="form-floating mb-3 pt-2">
                                            <input type="text" class="form-control" id="nombre"
                                                placeholder=" Nombre del Producto" value="<%= product.name%>">
                                            <label for="nombre">Nombre del Producto</label>
                                        </div>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <div class="form-floating mb-3">
                                            <input type="number" class="form-control" id="price" placeholder=" Precio" value="<%= product.price%>">
                                            <label for="price">Precio</label>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-floating  mb-3">
                                            <select class="form-select" id="floatingSelect"
                                                aria-label="Floating label select example" name="category" >
                                                <option value="" selected hidden>Seleccioná una categoría</option>
                                                <option value="perro" <%= product.category === "perro" ? 'selected' : null %> >perro</option>
							
							<option value="gato" <%= product.category === "gato" ? 'selected' :null %>  >gato</option>
                                            </select>
                                            <label for="floatingSelect">Categorías</label>
                                        </div>
                                    </div>


                                    <div class="col-12 col-md-6">
                                        <div class="form-floating  mb-3">
                                            <select class="form-select" id="floatingSelect"
                                                aria-label="Floating label select example" name="pesoProducts">
                                                <option selected hidden>Seleccioná el Peso</option>
                                                <% pesoProducts.forEach(pesoProducts=> { %>
                                                    <option value="<%= pesoProducts %>">
                                                        <%= pesoProducts %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                            <label for="floatingSelect">Peso</label>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">

                                        <div class="mb-3">
                                            <label for="image" class="btn btn-outline-secondary w-100 mt-2">Subí una
                                                imagen</label>
                                            <input hidden class="form-control" type="file" id="image" name="image">
                                        </div>
                                    </div>
                            </div>

                            <div class="col-12 p-3">
                                <div class="form-floating">
                                    <textarea style="resize: none; height: 90px;" class="form-control"
                                        placeholder="Descripción del producto" id="description"><%= product.description %></textarea>
                                    <label for="description">Descripción</label>
                                </div>
                            </div>


                            <div class="d-flex justify-content-center col-12 mt-5">
                                <button type="submit"
                                    style="height: 60px; width: 180px; border-radius: 30px; background-color: #fb9d5a; border: none; margin-bottom: 20px; "
                                    class="btn btn-primary">Guardar</button>
                            </div>


                            </form>
                        </div>
                    </div>

                </div>

                </div>
            </main>
            <%-include('./partials/footer')%>
                <%-include('./partials/scripts')%>

    </body>

</html>