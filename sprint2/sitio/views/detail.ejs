<!DOCTYPE html>
<html lang="es">

    <%-include('./partials/header')%>
<body>
    <header>
        <div class="header-principal">
            <div class="burger-menu">
                <a href=""><i class="fas fa-bars"></i></a>
            </div>
            <div class="img">
                <a href="/"><img class="logo" src="/img/logo.png" alt=""></a>
            </div>
            <div class="buscador">
                <form action="">
                    <input type="text" placeholder="¿Que estas buscando?">
                    <a class="lupa" href="" class="input-group-btn"><i class="fa fa-search fa-lg"></i></a>
                </form>
            </div>
            <div class="iconos">
                <nav>
                    <ul>
                        <a href="/login" class="user"><i class="far fa-user-circle"></i></a>
                        <a href="/carrito" class="carrito-header"><i class="iconify" data-icon="emojione-monotone:shopping-cart"></i></a>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="categorias">
            <nav>
                <ul>
                    <li><a href="/">Inicio</a></li>
                    <li>
                        <a href="" class="icono-perro"><i class="fas fa-dog"></i></a>
                        <a href="">Perros</a>
                        <a href="" class="boton"><i class="fas fa-caret-down"></i></i></a>
                    </li>
                    <li>
                        <a href="" class="icono-gato"><i class="fas fa-cat"></i></a>
                        <a href="">Gatos</a>
                        <a href="" class="boton"><i class="fas fa-caret-down"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <!--Detalle del producto-->

    <main class="detail">

        <!--contenedor imagenes -->
        <div class="box-detail">
            <div class="box-products">
                <div class="images">
                    <img id="img-main" src="/img/alimento1.jpg" alt="">
                </div>
            </div>
        </div>

        <div class="box-content">
            <!--informacion del producto -->
            <div class="box-info">
                <div>
                    <h2>Nombre del producto</h2>
                    <h3> $ 1.000 </h3>
                </div>
            </div>
            <hr>
            <!-- Contrato compra venta-->
            <div class="box-contrato">
                <!--Seleccionar cantidda-->
                <div class="cantidad-carrito">
                    <div class="box-form">
                    <h4>Cantidad</h4>
                        <div class="botones">
                            <input type="submit" value="-" id="menos">
                            <input type="number" value="1" id="cantidad">
                            <input type="submit" value="+" id="mas">
                        </div>
                    </div>
                    <!-- Boton agregar al carrito-->
                    <div class="btn-carrito">
                        <button>
                                <i class="fas fa-cart-plus"></i> <a href="/carrito"> Agregar al carrito </a>
                        </button>
                    </div>
                </div>

                <!--Metorodos de pago-->

                <div class="pagos">
                    
                    <input type="checkbox" id="btn-modal">
                    <label for="btn-modal" class="lbl-modal">Métodos de pagos <i class="far fa-address-card"></i> <i class="fas fa-sign-in-alt"></i> <i class="fas fa-university"></i></label>
                <!-- Ventana de pagos -->
                <div class="modal">
                    <div class="cont">
                        <header><h2><i class="far fa-credit-card"></i> Elegí como pagar</h2></header>
                        <label for="btn-modal">X</label>
                        <div class="contenido">
                            <div class="pagar">
                                <h4>
                                    Descuento con transferencias
                                </h4>
                                <img src="/img/mercado-pago.png" alt="">
                            </div>
                            <div class="pagar">
                                <h4>
                                    12 cuotas sin interes con
                                </h4>
                                <img src="/img/visa.png" alt="">
                                <img src="/img/mastercard.png" alt="">
                                <img src="/img/naranja.png" alt="">
                            </div>
                            <div class="pagar">
                                <h4>
                                    Pagos con débito
                                </h4>
                                <img src="/img/visa-debito.png" alt="">
                                <img src="/img/mastercard-debito.png" alt="">
                                <img src="/img/cabal-debito.png" alt="">
                            </div>
                            <div class="pagar">
                                <h4>
                                    Pagos en efectivo
                                </h4>
                                <img src="/img/pagofacil.png" alt="">
                                <img src="/img/rapipago.png" alt="">
                            </div>
                            
                        </div>
                    </div>
                </div>

                <div class="mas-detalle">
                    <li><a href="/formas-de-pago">más detalle</a></li>
                </div>

                </div>

                <!-- Envio-->

                <div class="envio">
                    <div class="truck">
                        <h4><i class="fas fa-truck"></i>  Envío </h4>
                    </div>
                    <!--calcular costo de envio -->
                    <div class="calcular-costo">
                            <p>
                                Calcular costo de envío
                            </p>
                        <div class="box-form">
                            <div class="codigo">
                                <input type="text" placeholder="tu codigo postal" id="codigo-postal" name="odigo-Postal">
                            </div>
                            <div class="calcular">
                                <input type="submit" value="calcular">
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        </div>
</main>
<main class="descripcion">
        <p>Una breve descripción del producto <br>
