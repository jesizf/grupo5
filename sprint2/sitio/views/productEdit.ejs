<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head',{title : 'Agregar producto'}) %> 

<body id="body-edit">
  <%- include('./partials/header') %> 

    <main class="container">
        <main class="container" style="margin-bottom: 50px;" >
            <div class="row">
                <div class="ccol-12 col-md-10 col-lg-8 mt-5 mx-auto"  >
                   <div class="card"  >
                       <div style="background-color: #fb9d5a" class="card-header text-light" >
                        <h5>Editar producto</h4>
                    </div>
                    <div class="card-body">
                        <form action="/products/update/<%= product.id %>?_method=PUT" class="row" method="POST">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input name="name" type="text" class="form-control" id="name" placeholder="Nombre del producto" value="<%= product.name %>">
                                        <label for="name">Nombre del producto</label>
                                      </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <textarea name="description" style="resize: none; height: 100px;" class="form-control" placeholder="Descripción del producto" id="floatingTextarea"><%= product.description %></textarea>
                                        <label for="floatingTextarea">Descripción</label>
                                      </div>
                                </div>
                               <div class="col-12 col-md-6">
                                <div class="form-floating mb-3">
                                    <input name="price" type="number" class="form-control" id="price" value=<%= product.price %>>
                                    <label for="price">Precio</label>
                                  </div>
                               </div>
                            
                               <div class="col-12 col-md-6">
                                <div class="form-floating">
                                    <select name="category" class="form-select" id="floatingSelect" aria-label="Floating label select example">
                                      <% categories.forEach(category => { %>
                                       <option value="<%= category %>" <%= category === product.category ? 'selected' : null %> ><%= firstLetter(category) %></option>
                                      <% }) %>
                                    </select>
                                    <label for="floatingSelect">Categoría</label>
                                  </div>
                               </div>
                               <div class="col-12 col-md-6">
                                <div class="mb-3">
                                    <div class="mb-3">
                                        <label for="image" class="btn btn-outline-secondary w-100 mt-2">Subir imagen</label>
                                        <input hidden class="form-control" type="file" id="image" name="image">
                                      </div>
                                   </div>
                               </div>
                               <div class="d-flex justify-content-center col-12 mt-5"  >
                                    <button type="submit" style="height: 60px; width: 180px; border-radius: 30px; background-color: #fb9d5a; border: none; margin-bottom: 20px; " class="btn btn-primary">Editar</button>

                                </div>
                           
                          </form>
                    </div>
                   
                </div>
            </div>
           
        </div>
    </main>

    <%- include('./partials/scripts') %> 

</body>
</html>